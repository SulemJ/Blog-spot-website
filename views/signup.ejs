<!-- write page: accept new name as a user and return it to index.js as req.body.name-->
 <div class="row pt-5">
    <div class="col-md-5  rounded-5 border border-dark">
        <h1 class="p-3  text-dark pt-0">create account</h1>
            <form class="px-3 text-dark  " action="/new" id="user" method="post"> 
           
                    <label class="pb-2" for="exampleFormControlTextarea1">Reviewer name:</label>
                    <input name="name" class="form-control border border-dark"  id="exampleFormControlTextarea1"  rows="1" required></input>
                
                    <label class="pb-2" for="exampleFormControlTextarea1">email:</label>
                    <input name="email" class="form-control  border border-dark"  id="exampleFormControlTextarea1"  rows="1" required></input>
            
                    <label class="pb-2" for="exampleFormControlTextarea1">password:</label>
                    <input name="password" class="form-control  border border-dark"  id="exampleFormControlTextarea1"  rows="1" required></input>
            
                    <br>
                    <input class="btn btn-outline-secondary text-dark mb-2" type="submit" value="create account">
            </form>
            <br>
    </div>
    <div class="col-md-1">
        <h1 class="tg or" >or</h1>
    </div>
    <div class="col-md-5  rounded-5 border border-dark">
        <h1 class="text-dark p-3">sign in</h1>
            <form class="px-3 text-dark " action="/signin" id="user" method="post"> 
                <label class="pb-2 " for="username">email:</label>
                <input name="username" type="username" class="form-control  border border-dark"  id="exampleFormControlTextarea1"  rows="1" required></input>
           
                <label class="pb-2 " for="password">password:</label>
                <input name="password" type="password" class="form-control  border border-dark"  id="exampleFormControlTextarea1"  rows="1" required></input>
            
                <br>
                <input class="btn btn-outline-secondary text-dark mb-2" type="submit" value="sign in">
            </form>
            <br>
    </div>
</div>
